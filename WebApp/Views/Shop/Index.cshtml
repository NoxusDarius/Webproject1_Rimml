@using WebApp.Models;
@model List<Article>
@{
    ViewData["Title"] = "Index";
}

<h1>IndexShop</h1>

@* @model .....hier muss der übergebene Datentyp(von der Actionmethode angeg. werden
    @Model .....die Instanz vom Typ wie in @model angegeben
*@
@if (Model == null || Model.Count == 0)
{
    <p> Es sind keine Artikel im Shop vorhanden</p>
}
else
{ <table>
        <thead>
            <tr>
                <td colspan="6">Shopartikel</td>
            </tr>

        </thead>
        <tbody>
            <tr>
                <td>Artikel-ID</td>
                <td>Artikel-Name</td>
                <td>Artikel-Erscheinungsdatum</td>
                <td>Artikel-Hersteller</td>
                <td>Artikel-Preis</td>
                <td>Artikel-Kategorie</td>
            </tr>
            @foreach (Article item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.ArticleName</td>
                    <td>@item.ReleaseDate</td>
                    <td>@item.Brand</td>
                    <td>@item.Price</td>
                    <td>@item.Category</td>
                </tr>

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6"> unsere Besonderen Artikel</td>
            </tr>


        </tfoot>
    </table>
}