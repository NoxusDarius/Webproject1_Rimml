
@{
    ViewData["Title"] = "LosAngeles";
}

<link id="pagestyle" rel="stylesheet" href="~/css/table.css" type="text/css" />
@if ((Model == null) || (Model.Count == 0))
{
    <p>
        Es sind keine Artikel im Shop vorhanden!
    </p>
}
else
{
    // alle Artike in Tabellenform ausgeben
    <section class="table1">
        <!--for demo wrap-->

        <div class="tbl-header">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>City Name</th>
                        <th>Sightseeing</th>
                        <th>Description</th>
                       
                    </tr>
                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>
                    @foreach (Article a in Model)
                    {
                        <tr>
                            <td>@a.CityId</td>
                            <td>@a.Cityname</td>
                            <td>@a.Sightseeing</td>
                            <td>@a.Description</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </section>


}